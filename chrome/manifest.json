{
  "name": "Gmail Encryptor",
  "version": "0.1",
  "description": "Encrypt simple emails in Gmail",
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["lib/bootstrap.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "tabs",
    "https://mail.google.com/",
  ],
  "manifest_version" : 2,
  "web_accessible_resources" : [
    "lib/bootstrap.js",
    "lib/gmailr.js",
    "lib/init.js",
    "lib/jquery.1.4.2.js",
    "lib/jquery.ba-bbq.js",
    "lib/lab.js",
    "main.css",
    "main.js"
   ]
}
